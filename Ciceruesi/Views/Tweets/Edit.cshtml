@model Ciceruesi.Models.Tweet

@{
    ViewData["Title"] = "Edit";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand text-light">Edit your tweet</a>
        <div class="d-sm-inline-flex justify-content-between">
            <a asp-action="Index"><button type="button" class="btn btn-outline-primary text-end">Back</button></a>
        </div>
    </div>
</nav>
<div class="row">
    <div class="d-flex justify-content-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 500px;">
                <label asp-for="Title" class="control-label" ></label>
                <input asp-for="Title" class="form-control bg-dark text-light" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"  style="width: 90%;"></label>
                <textarea asp-for="Body" class="form-control bg-dark text-light" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 300px; margin-top:15px"/>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
